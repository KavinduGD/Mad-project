<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage"
    android:background="#FF4B3A">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="103dp"
        android:layout_marginTop="28dp"

        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="259dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427"
        app:srcCompat="@drawable/welcomepage_pizza_image" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="314dp"
        android:layout_height="64dp"
        android:layout_marginTop="132dp"
        android:text="@string/BOBS_PIZZA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="54sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/almendra"/>


    <Button
        android:id="@+id/Login_bt"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background='@drawable/custom_button_white'
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:paddingLeft="16dp"
        android:text="@string/welcomepageButton1"
        android:textAllCaps="false"
        android:textColor="#FF4B3A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/phone_btn"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background='@drawable/custom_button_white'
        android:drawableLeft="@drawable/loginguest"
        android:paddingLeft="16dp"
        android:text="Log in with Phone"
        android:textAllCaps="false"
        android:textColor="#FF4B3A"
        android:textSize="16dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_bt" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center"
        android:layout_marginTop="604dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/hr"
            android:layout_width="120dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#474646">

        </TableRow>

        <TextView
            android:id="@+id/OR"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:text="OR"
            android:textAlignment="center"
            android:textColor="#090909"
            android:textSize="17sp" />

        <TableRow
            android:id="@+id/dr"
            android:layout_width="120dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="#474646" />

    </LinearLayout>

    <Button
        android:id="@+id/sign_google_btn"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:autoText="false"
        android:background='@drawable/custom_button_blue'
        android:drawableLeft="@drawable/google"
        android:paddingLeft="10dp"
        android:text="@string/weclocome_google"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"

        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_btn" />
    " />


</androidx.constraintlayout.widget.ConstraintLayout>